{
    "name": "app",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev": "tsx watch --tsconfig ./tsconfig.server.json --ignore \"src-client\" --ignore \"vite.config.ts.timestamp-*\" src-server/index.ts | pino-pretty",
        "dev:windows": "chcp 65001&&npm run dev",
        "build": "npm run check&&npm run build:all",
        "start": "cross-env NODE_ENV=production node --experimental-specifier-resolution=node dist/src-server/index.js",
        "start:windows": "chcp 65001&&npm run start",
        "check": "npm run lint&&npm run ts:check",
        "lint": "eslint src-base src-server src-client",
        "ts:check": "tsc -b --noEmit&&npm run tsc:trash:clean",
        "build:all": "rimraf dist&&npm run build:front&&npm run build:server&&npm run tsc:trash:clean",
        "build:server": "tsc -b&&tsc-alias -p tsconfig.server.json",
        "build:front": "vite build --outDir dist/static",
        "tsc:trash:clean": "rimraf -g *.tsbuildinfo -g dist/*.tsbuildinfo"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "pino": "^9.4.0",
        "pino-http": "^10.3.0",
        "pino-pretty": "^11.2.2",
        "sirv": "^2.0.4",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/express": "^4.17.21",
        "@types/node": "^18.19.55",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.2",
        "bootstrap": "5.3.3",
        "classnames": "^2.5.1",
        "eslint": "^9.12.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.12",
        "globals": "^15.11.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.2",
        "rimraf": "^5.0.5",
        "sass": "^1.75.0",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.7.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1",
        "vite": "^5.4.8"
    }
}
